    function LoadVolunteer() {
        table = $('#VolunteerTable').DataTable({
            bLengthChange: false,
            destroy: true,
            responsive: true,
            order: [[1, 'asc']],
            ajax: {
                type: "GET",
                "url": "/DataGet/GetVolunteer",
                dataSrc: function (json) {
                    var a = new Array();
                    for (var b = 0; b <= json.length - 1; b++) {
                        var c = json[b];
                        a.push({
                            'VolunteerID': c.VolunteerID,
                            'FamilyName': c.FamilyName,
                            'GivenName': c.GivenName,
                            'MaidenName': c.MaidenName,
                            'FullName': c.GivenName + " " + c.MaidenName + " " + c.FamilyName,
                            'Notes': c.Notes
                        });
                    }
                    return a;
                },
            },
            columns: [
                {
                    title: "Action",
                    "render": function () {
                        var del = "<a class='btn btn-danger btn-xs btnDelete'  title='Delete' style='color: white'><i class='fa fa-1x fa-trash'></i></a>";
                        var edit = "<a class='btn btn-primary btn-xs btnUpdate' title='Edit' style='color: white'><i class = 'fa fa-1x fa-edit'></i></a>";
                        return edit + "   " + del;
                    },
                    width: "80px"
                },
                {
                    title: "ID Number",
                    data: "VolunteerID"
                },
                {
                    title: "Name",
                    data: "FullName"
                },
            ],
            'columnDefs': [
                {
                    "className": "dt-center", "targets": "_all"
                }],
        });

        return table;
    };

    $(document).on("click", ".AddVolunteer", function () {
        $('#myModalAdd').modal('show');
    });

    $(document).on("click", ".btnREQAddVolunteer", function () {

        var PARAM_GivenName = $('.tbGivenName').val();
        var PARAM_MaidenName = $('.tbMaidenName').val();
        var PARAM_FamilyName = $('.tbFamilyName').val();

        $.ajax({
            type: "GET",
            "url": "/DataInsert/InsertVolunteer",
            dataType: "json",
            async: false,
            data: { GivenName: PARAM_GivenName, MaidenName: PARAM_MaidenName, FamilyName: PARAM_FamilyName }
        });

        $('#myModalAdd').modal('hide');

        LoadVolunteer();
    });

    $(document).on("click", ".btnUpdate", function () {
        $('#myModalUpdate').modal('show');

        var data = table.row($(this).parents('tr')).data();
        var PARAM_GivenName = data["GivenName"];
        var PARAM_MaidenName = data["MaidenName"];
        var PARAM_FamilyName = data["FamilyName"];
        var PARAM_VolunteerID = data["VolunteerID"];

        VolunteerID = PARAM_VolunteerID;

        document.getElementById("tbUGivenName").value = PARAM_GivenName;
        document.getElementById("tbUMaidenName").value = PARAM_MaidenName;
        document.getElementById("tbUFamilyName").value = PARAM_FamilyName;

    });

    $(document).on("click", ".btnREQUpdateVolunteer", function () {
        $('#myModalUpdate').modal('hide');
        var PARAM_GivenName = $('.tbUGivenName').val();
        var PARAM_MaidenName = $('.tbUMaidenName').val();
        var PARAM_FamilyName = $('.tbUFamilyName').val();
        var PARAM_VolunteerID = VolunteerID;

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes. Update data!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "GET",
                    "url": "/DataUpdate/UpdateVolunteer",
                    dataType: "json",
                    async: false,
                    data: {
                        VolunteerID: PARAM_VolunteerID,
                        GivenName: PARAM_GivenName,
                        MaidenName: PARAM_MaidenName,
                        FamilyName: PARAM_FamilyName
                    }
                });
                LoadVolunteer();
            }
        })
    });

    $(document).on("click", ".btnDelete", function () {
        var data = table.row($(this).parents('tr')).data();
        var PARAM_VolunteerID = data["VolunteerID"];

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes. Delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "GET",
                    "url": "/DataDelete/DeleteVolunteer",
                    dataType: "json",
                    async: false,
                    data: { VolunteerID: PARAM_VolunteerID }
                });
                LoadVolunteer();
            }
        })
    });

</script>







