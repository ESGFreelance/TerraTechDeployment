
@{
    Layout = @ViewBag.VBLayout;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="">Administrator</a></li>
        <li class="breadcrumb-item"><a href="">Management</a></li>
        <li class="breadcrumb-item"><a href="">Concerns</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-chart-area mr-1"></i>
            List of Volunteers
        </div>

        <div class="card-body">
            <div class="control-label col-xs-12 col-sm-4">
                <label class="asteriskRequired"></label>
            </div>
            <div class="col-xs-12 col-sm-8">
                <input type="submit" id="AddVolunteer" value="Add Volunteer!" class="btn btn-primary btn-md AddVolunteer" />
            </div>
            <table id="VolunteerTable" class="table table-hover table-striped table-bordered table-responsive-sm" cellspacing="0" style="width:100%; "></table>
        </div>

        <div class="card-footer small text-muted">Data as of @ViewBag.DATETIMENOW</div>
    </div>

    @*MODAL SECTION ADD START*@
    <div class="modal fade" id="myModalAdd" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content" id="modalwindow">
                <div class="modal-header">
                    <h3 class="modal-title Title">Insert : Community Volunteer</h3>
                </div>
                <div class="modal-body">

                    <div class="modal-body mx-3">

                        <div class="md-form mb-5">
                            <input type="text" id="tbGivenName" class="form-control validate tbGivenName">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Given Name</label>
                        </div>

                        <div class="md-form mb-5">
                            <input type="text" id="tbMaidenName" class="form-control validate tbMaidenName">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Maiden Name</label>
                        </div>

                        <div class="md-form mb-5">
                            <input type="text" id="tbFamilyName" class="form-control validate tbFamilyName">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Family Name</label>
                        </div>

                    </div>


                </div>
                <div class="modal-footer">
                    <input type="submit" id="btnREQAddVolunteer" value="Insert" class="btn btn-primary btn-md btnREQAddVolunteer" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Close">Close</button>
                </div>
            </div>
            <!-- Modal content-->
        </div>
    </div>
    @*MODAL SECTION ADD END*@

    @*MODAL SECTION UPDATE START*@
    <div class="modal fade" id="myModalUpdate" role="dialog">
        <div class="modal-dialog modal-md">
            <!-- Modal content-->
            <div class="modal-content" id="modalwindow">
                <div class="modal-header">
                    <h3 class="modal-title Title">Update : Community Volunteer</h3>
                </div>
                <div class="modal-body">

                    <div class="modal-body mx-3">

                        <div class="md-form mb-5">
                            <input type="text" id="tbUGivenName" class="form-control validate tbUGivenName">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Given Name</label>
                        </div>

                        <div class="md-form mb-5">
                            <input type="text" id="tbUMaidenName" class="form-control validate tbUMaidenName">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Maiden Name</label>
                        </div>

                        <div class="md-form mb-5">
                            <input type="text" id="tbUFamilyName" class="form-control validate tbUFamilyName">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Family Name</label>
                        </div>

                    </div>


                </div>
                <div class="modal-footer">
                    <input type="submit" id="btnREQUpdateVolunteer" value="Update" class="btn btn-primary btn-md btnREQUpdateVolunteer" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Close">Close</button>
                </div>
            </div>
            <!-- Modal content-->
        </div>
    </div>
    @*MODAL SECTION UPDATE END*@

    <div class="modal fade" id="myModalDummy" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content" id="modalwindow">
                <div class="modal-header">
                    <h3 class="modal-title Title">DUMMY MODAL</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @*LEFT SIDE*@
                        <div class="col-md-6">
                            @*PHOTO*@
                            <div class="col-md-6">
                                ROW A
                            </div>

                            @*MAP*@
                            <div class="col-md-6">
                                ROW B
                            </div>
                        </div>

                        @*RIGHT SIDE*@
                        <div class="col-md-6">

                            <div class="md-form mb-3">
                                <input type="text" id="tbGivenName" class="form-control validate tbGivenName">
                                <label data-error="wrong" data-success="right" for="orangeForm-name">Given Name</label>
                            </div>

                            <div class="md-form mb-3">
                                <input type="text" id="tbMaidenName" class="form-control validate tbMaidenName">
                                <label data-error="wrong" data-success="right" for="orangeForm-name">Maiden Name</label>
                            </div>

                            <div class="md-form mb-3">
                                <input type="text" id="tbFamilyName" class="form-control validate tbFamilyName">
                                <label data-error="wrong" data-success="right" for="orangeForm-name">Family Name</label>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" id="btnREQAddVolunteer" value="Insert" class="btn btn-primary btn-md btnREQAddVolunteer" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Close">Close</button>
                </div>
            </div>
            <!-- Modal content-->
        </div>
    </div>

</body>
