</head>

<body>

    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">


                <div class="row">
                    <div class="col-sm-5">



                        <div class="form-box">
                            <div class="form-top">

                                <a href="/Home/Index"><img src="../TerraMaster/images/logo.png" alt="" /></a>
                                <div class="form-top-left">
                                    <h3>Login</h3>
                                    <p>Enter username and password to log on:</p>
                                </div>

                                <div class="form-top-right">
                                    <i class="fa fa-lock"></i>

                                </div>
                            </div>
                            <div class="form-bottom">

                                @using (Html.BeginForm("Authorise", "Entities", FormMethod.Post))
                                {

                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Username</label>
                                        <input type="text" name="Username" placeholder="Username..." class="form-username form-control" id="form-username" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Password</label>
                                        <input type="password" name="Password" placeholder="Password..." class="form-password form-control" id="form-password" required>
                                    </div>

                                    <button type="submit" value="Submit" class="btn">Sign in!</button>
                                }

                            </div>
                        </div>



                    </div>

                    <div class="col-sm-1 middle-border"></div>
                    <div class="col-sm-1"></div>

                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Sign up now</h3>
                                    <p>Join the TerraTech Community</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-pencil"></i>
                                </div>
                            </div>
                            <div class="form-bottom">

                                @using (Html.BeginForm("Register", "Entities", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Username</label>
                                        <input type="text" name="Username" placeholder="Username..." class="form-username form-control" id="form-username" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Password</label>
                                        <input type="password" name="Password" placeholder="Password..." class="form-password form-control" id="form-password" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-first-name">First Name</label>
                                        <input type="text" name="GivenName" placeholder="First Name..." class="form-first-name form-control" id="form-first-name" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-middle-name">Middle Name</label>
                                        <input type="text" name="MaidenName" placeholder="Middle Name..." class="form-middle-name form-control" id="form-middle-name" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-last-name">Last Name</label>
                                        <input type="text" name="FamilyName" placeholder="Last Name..." class="form-last-name form-control" id="form-last-name" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-email">Email</label>
                                        <input type="email" name="Email" placeholder="Email..." class="form-email form-control" id="form-email" required>
                                    </div>



                                    
                                    <p style="color:white;"><input type="checkbox" class="form-check-input" id="exampleCheck1" required> I agree with the <a href="" style="color:greenyellow;" data-toggle="modal" data-target="#myModalUpdate">User Agreement and Privacy Policy</a></p>
                                    <button type="submit" value="Submit" class="btn">Sign me up!</button>

                                }

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>


