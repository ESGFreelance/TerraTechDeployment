
@{
    Layout = @ViewBag.VBLayout;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@LabelStruct.Administrator.MonthlyReports</title>
</head>
<body>

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="">Administrator</a></li>
        <li class="breadcrumb-item"><a href="">Management</a></li>
        <li class="breadcrumb-item"><a href="">Concerns</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">

            @LabelStruct.Administrator_Message.M_MonthlyReports
        </div>
    </div>


    <div class="col-xs-12 col-sm-8">
        <select name="YearDDL" class="btn btn-primary YearDDL"></select>
        <select name="MonthDDL" class="btn btn-primary MonthDDL">
            <option>Select Month</option>
            <option value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
        </select>
    </div>

    <div class="control-label col-xs-12 col-sm-4">
        <label class="asteriskRequired"></label>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar mr-1"></i>
                    Monthly Overall Status
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100" height="50"></canvas></div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie mr-1"></i>
                    Completed Land and Water Concerns
                </div>
                <div class="card-body"><canvas id="myPieChart" width="100" height="50"></canvas></div>
            </div>
        </div>
    </div>

    <div class="control-label col-xs-12 col-sm-4">
        <label class="asteriskRequired"></label>
    </div>
    <div class="col-xs-12 col-sm-8">
        <input type="submit" id="btnGenerate" value="Generate" class="btn btn-primary btn-md btnGenerate" />
    </div>

</body>
</html>


<script>

    $(document).ready(function () {
        LoadYearDDL();
        jQuery(".MonthDDL").attr('disabled', true);
    });

    function LoadYearDDL() {
        var temp = $(".YearDDL").empty();
        temp.append($("<option>Select Year</option>"));
        $.ajax({
            type: "GET",
            url: "/DataGet/GetYear",
            dataType: "json",
            success: function (response) {
                $.each(response, function () {
                    temp.append($("<option></option>").val(this['Description']).html(this['Description']));
                });
            }
        })
    };

    $(document).on("click", ".btnGenerate", function () {

        var PARAM_Year = @ViewBag.CURRENT_YEAR;
        var PARAM_Month = @ViewBag.CURRENT_MONTH;


        if (PARAM_Year == 0 || PARAM_Year == "" || PARAM_Year == null || PARAM_Year == "Select Year") {

            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please select a year!',
                footer: '<a>Powered by TerraTech</a>'
            })
        }

        else {
            try {
                window.location.href = "/datagenerate/GenerateMonthReport/?Year=" + PARAM_Year + "&Month=" + PARAM_Month;
                Swal.fire({
                    icon: 'success',
                    title: 'Data Transmitted',
                    text: 'Successfully Generated!',
                    footer: '<a>Powered by TerraTech</a>'
                })
            }
            catch
            {

            }
        }
    });

    var PIE = document.getElementById("myPieChart");
    var myPieChart = new Chart(PIE, {
        type: 'pie',
        data: {
            labels: [@Html.Raw(ViewBag.ECName)],
            datasets: [{
                data: [@ViewBag.ECCount],
                backgroundColor: ["#B46E10", "#15a8f4"],
                    //['#00FFFF', '#32CD32']
            }],
        },
    });

    var BAR = document.getElementById("myBarChart");
    var myBarChart = new Chart(BAR, {
        type: 'bar',
        data: {
            labels: [@Html.Raw(ViewBag.SStatus)],
            datasets: [{
                data: [@ViewBag.SCount],
                backgroundColor: ['#e25b06', '#ffc107', '#dc3545', '#28a745', '#BDB6AC'],

            }],
        },
        options: {
            legend: {
                display: false
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true,
                        min: 0
                    }
                }]
            }
        }
    });


    $(document).on("change", ".MonthDDL", function () {

        var PARAM_Year = $('.YearDDL').val();
        var PARAM_Month = $('.MonthDDL').val();

        if (PARAM_Year == 0 || PARAM_Year == "" || PARAM_Year == null || PARAM_Year == "Select Year" ) {

            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please select a year!',
                footer: '<a>Powered by TerraTech</a>'
            })
        }

        else {
            try {
                window.location.href = "/Entities/MonthlyReports?Year=" + PARAM_Year + '&Month=' + PARAM_Month;
            }
            catch
            {

            }
        }
    });


    $(document).on("change", ".YearDDL", function () {

        jQuery(".MonthDDL").attr('disabled', false);

    });

</script>